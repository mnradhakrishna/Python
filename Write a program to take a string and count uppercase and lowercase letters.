def count_upper_lower(str):
    upper_count = 0
    lower_count = 0
    for char in str:
        if char.isupper():
            upper_count+=1
        elif char.islower():
            lower_count+=1
    return upper_count, lower_count
input_string=input("")
upper_count,lower_count=count_upper_lower(input_string)
print(f"uppercase letters:{upper_count}")
print(f"lowercase letters:{lower_count}")
